@using MovieBookingSystem.ViewModelsUser;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box shadow-lg">
        <h2 class="text-center mb-4 text-dark">Change Password</h2>
        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-dark fw-semibold"></label>
                <input asp-for="Email" class="form-control rounded-3" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label text-dark fw-semibold"></label>
                <input asp-for="NewPassword" class="form-control rounded-3" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label text-dark fw-semibold"></label>
                <input asp-for="ConfirmNewPassword" class="form-control rounded-3" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-warning text-black w-100 py-2 fw-bold">Submit</button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none text-secondary fw-semibold">
                    Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
