@using MovieBookingSystem.ViewModelsUser;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box shadow-lg">
        <h2 class="text-center mb-4 text-dark">Register</h2>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label text-dark fw-semibold"></label>
                <input asp-for="Name" class="form-control rounded-3" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-dark fw-semibold"></label>
                <input asp-for="Email" class="form-control rounded-3" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-dark fw-semibold"></label>
                <input asp-for="Password" class="form-control rounded-3" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label text-dark fw-semibold"></label>
                <input asp-for="ConfirmPassword" class="form-control rounded-3" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-warning text-black fw-bold w-100 py-2">
                Register
            </button>

            <p class="text-center mt-3 mb-0 text-dark">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-warning fw-semibold">Login</a>
            </p>

            <div class="text-center mt-2">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-secondary">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
    