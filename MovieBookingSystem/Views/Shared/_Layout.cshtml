<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShowTime</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieBookingSystem.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500&display=swap" rel="stylesheet">


    <style>
        body {
            background-color: #f8f9fa;
            margin-bottom: 0px;
        }

        .pacifico-regular {
            font-family: "Pacifico", cursive;
            font-weight: 500;
            font-style: normal;
            font-size: 32px;
            color: #212529;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
            animation: glowText 2s ease-in-out infinite alternate;
        }

        @@keyframes glowText {
            from {
                text-shadow: 0 0 5px #ffc107, 0 0 10px #ffcc00;
            }

            to {
                text-shadow: 0 0 10px #ff8800, 0 0 20px #ffaa00;
            }
        }

        .navbar-brand:hover {
            color: #000000 !important;
        }

        .navbar-nav .nav-link {
            font-size: 18px;
            padding: 8px 16px;
            position: relative;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link::after {
                content: "";
                position: absolute;
                width: 0%;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: #000;
                transition: width 0.3s ease-in-out;
            }

            .navbar-nav .nav-link:hover::after {
                width: 100%;
            }

            .navbar-nav .nav-link:hover {
                color: #000;
            }

        .card:hover img {
            transform: scale(1.05);
            filter: brightness(100%);
        }

        .card-title {
            color: #ffc107;
        }

        .card:hover {
            box-shadow: 0 8px 20px rgba(255, 193, 7, 0.3);
        }


        footer {
            padding: 1rem 0;
            font-size: 16px;
            background-color: #ffc107 !important;
        }

        footer a {
            text-decoration: none;
            color: #212529;
            transition: all 0.3s ease;
        }

        footer a:hover {
            text-decoration: underline;
            color: #000;
        }

        .image-overlay-wrapper {
            position: relative;
            overflow: hidden;
        }

        .image-overlay-wrapper img {
            display: block;
            width: 100%;
            height: 300px;
            object-fit: cover;
            transition: transform 0.4s ease;
            filter: brightness(90%);
        }

        .image-overlay-wrapper:hover img {
            transform: scale(1.05);
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .image-overlay-wrapper:hover .image-overlay {
            opacity: 1;
        }

    </style>


</head>

<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-warning shadow-sm">
            <div class="container-lg">
                <a class="navbar-brand pacifico-regular" asp-area="" asp-controller="Home" asp-action="Index">ShowTime</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Movie" asp-action="Index">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Actor" asp-action="Index">Actors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Director" asp-action="Index">Directors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Hall" asp-action="Index">Hall</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-lg min-vh-100">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-dark bg-warning mt-auto py-3">
        <div class="container-lg text-center">
            &copy; 2025 - <span class="pacifico-regular">ShowTime</span> -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: false
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
