@model MovieBookingSystem.Models.Director

@{
    ViewData["Title"] = "Delete Director";
}

<div class="container my-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0 text-center">Delete Director</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this director?</h5>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Name</div>
                <div class="col-md-8">@Model.Name</div>

                <div class="col-md-4 fw-bold mt-3">Biography</div>
                <div class="col-md-8 mt-3">@Model.Biography</div>

                <div class="col-md-4 fw-bold mt-3">Date of Birth</div>
                <div class="col-md-8 mt-3">@Model.DateOfBirth.ToString("yyyy-MM-dd")</div>

                <div class="col-md-4 fw-bold mt-3">Image</div>
                <div class="col-md-8 mt-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Director Image" class="img-fluid rounded mx-auto" style="max-width: 150px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </div>
            </div>

            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="DirectorId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
