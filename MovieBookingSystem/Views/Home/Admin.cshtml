<style>
    .dashboard-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
    }

        .dashboard-card:hover:not(.disabled) {
            transform: translateY(-5px);
            box-shadow: 0 0 20px rgba(0,0,0,0.15);
        }

        .dashboard-card.disabled {
            cursor: not-allowed;
            opacity: 0.5;
        }

    .dashboard-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }
</style>

