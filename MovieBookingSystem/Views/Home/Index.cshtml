<section class="hero-section d-flex align-items-center text-center text-white" style="background: url('https://i.ibb.co/Y79qq5Zd/LUCA.jpg') center center / cover no-repeat; min-height: 65vh; position: relative;">
    <div style="background-color: rgba(0, 0, 0, 0.5); position: absolute; top: 0; right: 0; bottom: 0; left: 0;"></div>
    <div class="container position-relative z-2">
        <h1 class="display-3 fw-bold mb-3">Book Your Favorite Movies Instantly</h1>
        <p class="lead">Enjoy seamless booking and experience the magic of cinema with ShowTime.</p>
        <a class="btn btn-warning btn-lg mt-3 text-dark fw-semibold" href="/Movie/Index">Browse Movies</a>
    </div>
</section>


<section class="py-5">
    <div class="container">
        <h2 class="text-center text-dark display-5 mb-5 d-flex justify-content-center align-items-center gap-2" style="font-family: 'Cinzel', serif; letter-spacing: 2px;">
            <img src="/Images/103271_cinema_icon.png" alt="Cinema Icon" style="height: 45px; width: auto;" />
            Popular Movies
        </h2>
        <div class="row g-4">
            @foreach (var movie in popularMovies)
            {
                <div class="col-sm-12 col-md-6 col-lg-4" data-aos="zoom-in">
                    <div class="card h-100 border-0 text-white" style="background-color: #1c1c1e; border-radius: 15px; overflow: hidden;">
                        <img src="@movie.Poster" class="card-img-top" alt="@movie.Title"
                             style="height: 300px; object-fit: cover; filter: brightness(90%); transition: transform 0.4s ease;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="font-weight: 600;">@movie.Title (@movie.Year)</h5>
                            <p class="card-text text-light" style="font-size: 0.95rem;">@movie.Description</p>
                            <button class="btn btn-warning mt-auto" disabled style="border-radius: 25px;">🎟 View Details</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



<section class="reviews-section bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4 display-5" style="font-family: 'Cinzel', serif; letter-spacing: 2px;">What Our Users Say</h2>
        <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 border-0">
