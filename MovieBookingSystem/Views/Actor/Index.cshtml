@{
    ViewData["Title"] = "Actors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actors</h2>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Actor</a>
    <a class="btn btn-success" href="/Actor/DownloadExcel">Download Actor list (Excel)</a>
</div>

<link href="https://unpkg.com/tabulator-tables@5.4.3/dist/css/tabulator.min.css" rel="stylesheet" />
<script src="https://unpkg.com/tabulator-tables@5.4.3/dist/js/tabulator.min.js"></script>
<style>
    .tabulator{
        background-color: #f8f9fa;
    }
</style>
<div id="actor-table"></div>

<script>
    var table = new Tabulator("#actor-table", {
        height: 500,
        layout: "fitColumns",
        ajaxURL: "/Actor/GetActors",
        pagination: "remote",
        paginationSize: 10,
        ajaxConfig: "GET",
        ajaxResponse: function(url, params, response) {
            return response.data;
        },
        paginationDataReceived: {
            last_page: "last_page",
            data: "data"
        },
        columns: [
            { title: "ID", field: "actorId", visible: false },
            { title: "Name", field: "name", editor: "input" , sorter: "string", headerFilter: "input"},
            { title: "Biography", field: "biography", editor: "input" , sorter: "string", headerFilter: "input"},
            { title: "Date of Birth", field: "dateOfBirth", editor: "input" , sorter: "string", headerFilter: "input" },
            {
                title: "Image",
                field: "imageUrl",
                formatter: function(cell) {
                    const url = cell.getValue();
                    return `<img src="${url}" alt="Actor Image" style="height: 60px; border-radius: 5px;" />`;
                }
            },
            {
                title: "Actions",
                formatter: function(cell) {
                    var data = cell.getRow().getData();
                    return `
                        <button class="btn btn-sm btn-warning me-1 action-edit" data-id="${data.actorId}">Edit</button>
                        <button class="btn btn-sm btn-danger action-delete" data-id="${data.actorId}">Delete</button>
                    `;
                },
                width: 180,
                hozAlign: "center",
                headerSort: false
            }
        ]
    });

    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('action-edit')) {
            const id = e.target.getAttribute('data-id');
            window.location.href = '/Actor/Edit/' + id;
        } else if (e.target.classList.contains('action-delete')) {
            const id = e.target.getAttribute('data-id');
            window.location.href = '/Actor/Delete/' + id;
        }
    });

    table.on("cellEdited", function(cell) {
        let rowData = cell.getRow().getData();
        fetch("/Actor/Edit/" + rowData.actorId, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(rowData)
        });
    });
</script>
