@model MovieBookingSystem.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<h2>Delete Actor</h2>

<h4>Are you sure you want to delete this actor?</h4>
<hr />

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Biography</dt>
        <dd class="col-sm-10">@Model.Biography</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Actor Image" width="150" />
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ActorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
