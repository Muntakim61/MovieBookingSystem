@model MovieBookingSystem.Models.Hall

@{
    ViewData["Title"] = "Delete Hall";
}

<div class="container my-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0 text-center">Delete Hall</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this hall?</h5>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Name</div>
                <div class="col-md-8">@Model.Name</div>

                <div class="col-md-4 fw-bold mt-3">Location</div>
                <div class="col-md-8 mt-3">@Model.Location</div>

                <div class="col-md-4 fw-bold mt-3">Capacity</div>
                <div class="col-md-8 mt-3">@Model.Capacity</div>
            </div>

            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="HallId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
